    <rim:orientation mode="auto"/>
  
    <rim:navigation mode="focus" />
 
    <rim:loadingScreen backgroundcolor="#FFFFFF" 
                       onLocalPageLoad="true"
                       backgroundImage="images/backgroundgray.png" 
                       foregroundImage="images/home/loading.gif"
                       onFirstLaunch="true">
        <rim:transitionEffect type="zoomIn"/>
    </rim:loadingScreen>
    <icon src="images/icon.png"/>
