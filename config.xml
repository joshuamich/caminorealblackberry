    <feature id="blackberry.ui.dialog" />
    <feature id="blackberry.invoke" />
    <feature id="blackberry.invoke.BrowserArguments" />
    <feature id="blackberry.identity" />
    <feature id="blackberry.system.event" />
    <feature id="blackberry.invoke.CameraArguments" />
    <feature id="blackberry.ui.menu" />
    <access subdomains="true" uri="http://gstatic.com"/>
    <access subdomains="true" uri="http://googleapis.com"/>
    <access subdomains="true" uri="http://innotechsa.com"/>
    <access subdomains="true" uri="http://ustream.tv"/>
    <access subdomains="true" uri="http://youtube.com"/>
    <access subdomains="true" uri="https://google-developers.appspot.com"/>
	
	
    <rim:connection timeout="600000">
        <id>TCP_WIFI</id>
        <id>MDS</id>
        <id>BIS-B</id>
